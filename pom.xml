        <payment.service.version>1.0-SNAPSHOT</payment.service.version>
        <infrastructure.version>1.0-SNAPSHOT</infrastructure.version>
        <kafka.version>1.0-SNAPSHOT</kafka.version>
    </properties>
    <dependencies>
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-logging</artifactId>
        </dependency>

    </dependencies>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>com.klaa</groupId>
                <artifactId>common-application</artifactId>
                <version>${common.module.version}</version>
            </dependency>
            <dependency>
                <groupId>com.klaa</groupId>
                <artifactId>common-data</artifactId>
                <version>${common.module.version}</version>
            </dependency>
            <dependency>
                <groupId>com.klaa</groupId>
                <artifactId>common-domain</artifactId>
                <version>${common.module.version}</version>
            </dependency>
            <dependency>
                <groupId>com.klaa</groupId>
                <artifactId>driver-application</artifactId>
                <version>${driver.service.version}</version>
