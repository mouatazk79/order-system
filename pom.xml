            </dependency>
            <dependency>
                <groupId>com.klaa</groupId>
                <artifactId>payment-messaging</artifactId>
                <version>${payment.service.version}</version>
            </dependency>
            <dependency>
                <groupId>com.klaa</groupId>
                <artifactId>saga</artifactId>
                <version>${infrastructure.version}</version>
            </dependency>
            <dependency>
                <groupId>com.klaa</groupId>
