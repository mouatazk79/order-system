    <groupId>com.klaa</groupId>
    <artifactId>order-system</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>pom</packaging>
    <properties>
        <maven.compiler.source>17</maven.compiler.source>
        <maven.compiler.target>17</maven.compiler.target>
        <spring.boot.maven.plugin.version>3.3.3</spring.boot.maven.plugin.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven-compiler-plugin.version>3.13.0</maven-compiler-plugin.version>
        <common.module.version>1.0-SNAPSHOT</common.module.version>
        <driver.service.version>1.0-SNAPSHOT</driver.service.version>
        <order.service.version>1.0-SNAPSHOT</order.service.version>
        <payment.service.version>1.0-SNAPSHOT</payment.service.version>
        <infrastructure.version>1.0-SNAPSHOT</infrastructure.version>
        <spring.kafka.version>3.1.1</spring.kafka.version>
        <kafka.avro.serelizer.version>7.3.0</kafka.avro.serelizer.version>
        <avro.version>1.12.0</avro.version>
        <infrastructure.kafka.version>1.0-SNAPSHOT</infrastructure.kafka.version>
        <infrastructure.elastic.version>1.0-SNAPSHOT</infrastructure.elastic.version>
        <kafka.to.elastic.version>1.0-SNAPSHOT</kafka.to.elastic.version>
        <elastic.version>7.9.1</elastic.version>
        <logstash-logback-encoder.version>7.2</logstash-logback-encoder.version>
