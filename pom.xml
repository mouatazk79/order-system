            </dependency>
            <dependency>
                <groupId>com.klaa</groupId>
                <artifactId>order-container</artifactId>
                <version>${order.service.version}</version>
            </dependency>
            <dependency>
                <groupId>com.klaa</groupId>
                <artifactId>order-data</artifactId>
                <version>${order.service.version}</version>
            </dependency>
            <dependency>
                <groupId>com.klaa</groupId>
                <artifactId>order-domain-core</artifactId>
                <version>${order.service.version}</version>
            </dependency>
            <dependency>
                <groupId>com.klaa</groupId>
                <artifactId>order-application-service</artifactId>
                <version>${order.service.version}</version>
            </dependency>
            <dependency>
                <groupId>com.klaa</groupId>
                <artifactId>order-messaging</artifactId>
                <version>${order.service.version}</version>
            </dependency>
            <dependency>
                <groupId>com.klaa</groupId>
                <artifactId>payment-container</artifactId>
                <version>${payment.service.version}</version>
            </dependency>
            <dependency>
                <groupId>com.klaa</groupId>
                <artifactId>payment-data</artifactId>
